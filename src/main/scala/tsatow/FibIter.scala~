package tsatow

object FibIter {
  def fib(n: Int): Int = {
    @annotation.tailrec
    def fibIter(count: Int, prev1: Int, prev2: Int): Int = n match {
      case 1 | 0      => 1
      case count <  n => fibIter(count + 1, prev1 + prev2, prev1)
      case count == n => prev1 + prev2
    }

    fibIter(0, 0, n)
  }
}
